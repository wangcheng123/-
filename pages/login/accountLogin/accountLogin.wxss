/* pages/login/accountLogin/accountLogin.wxss */
.txt{
  font-size:36rpx;
  font-family:PingFangSC-Medium;
  font-weight:600;
  color:rgba(51,51,51,1);
  margin: 40rpx 0 0 30rpx;
}
.login_form{ 
  min-height: 10%;
  padding: 102rpx 90rpx 0;
}
.login_form .form_item .close_phone{
  width: 36rpx;
  height: 36rpx;
  font-size: 0;
  position: relative;
}
.login_form .form_item .close_phone image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 33rpx;
  right: -12rpx;
  z-index: 10,
}

.login_form .form_item{
  height: 90rpx;  
  line-height: 90rpx;
  border-bottom: 1px solid #EEEEEE;
  display: flex;
  margin-bottom: 7%;
  position: relative;
}
.login_form .form_item label image{
  width: 100%;
  height:100%;
}
.login_form .form_item .icon_phone{
  width: 56rpx;
  height: 56rpx;
  margin: 2% 30rpx 0 20rpx;
}
.login_form .form_item .icon_psw{
  width: 56rpx;
  height: 56rpx;
  margin: 2% 30rpx 0 20rpx;
}
.login_form .login_phone{
  width: 70%;
  height: 100%;
  font-size: 32rpx;
  color: #333333;
}
.login_form .login_psw{
  width: 70%;
  height: 100%;
  font-size: 32rpx;
  color: #333333;
}
.login_form .psw_eye{
  width: 52rpx;
  height: 52rpx;
  margin-top: 24rpx;
  float: right;
  font-size: 0;
}
.login_form .psw_eye image{
  width: 100%;
  height: 100%;
}
.phcolor{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  color:#CCCCCC; 
}
button.login_sub{
  margin: 100rpx 13% 0;
  height:90rpx;
  line-height: 90rpx;
  border-radius:46rpx;
  color:white;
  font-size:34rpx;
  font-weight:500;
  background:rgba(255,56,62,1);
}
button.login_sub[disabled]{
  margin: 100rpx 13% 0;
  height:90rpx;
  line-height: 90rpx;
  border-radius:46rpx;
  color:white;
  font-size:34rpx;
  font-weight:500;
  background:rgba(255,56,62,1);
  opacity:0.4964;
}
.login_sub::after{
  border: none;
}
