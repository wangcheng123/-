/* pages/fast/bookDetail/bookingDetail.wxss */

.container_mains{
  width: 100%;
  height: 100%;
  position: relative;
}

.line{
  height: 16rpx;
  background-color:  #F5F6FA;
  width: 100%;
}
.section{
  width: 100%;
  font-size: 30rpx;
}

.section-gray{
  background-color: #F5F6FA;
}

.section .item-top{
  margin: 6rpx 24rpx !important;
}

/* 下划线 */
.section .item-line{
  border-bottom: 1px solid #F6F6F6;
}
.section .item-line:last-child{
  border-bottom: 0px;
}

.section .item{
  display: flex;
  justify-content: space-between;
  height: 78rpx;
  line-height: 78rpx;

  margin: 4rpx 24rpx;
}


.section .item .left{
  color: #7A7A7A;
}

.section .item-top .right{
  color: red;
}