/* fastother.wxss */
.container_others{
  height: 100%;
  background:#f5f5f5;
}
/* 快速预约 预约单 tab */
.changetab{
  height: 70rpx;
  line-height: 70rpx;
  font-size:28rpx;
  padding: 0 25%;
  display: flex;
  justify-content: space-between;
  background:#fff;
}
.changetab .check{
  color: #FF383E;
  border-bottom: 5rpx solid #FF383E;
}
.changetab .default{
  color: #333333;
}
/* 头部进度 */
.top_area{
  background:#F5F5F5;
  padding: 40rpx 0 20rpx;
}
.nav_bar{ 
  display: flex;
  justify-content: space-around;
  border-radius:8px 8px 0px 0px;
  padding: 0 40rpx;
}
.nav_bar text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color: #999;
}
.nav_bar text.finish{
  color: #FF383E;
}
/* 预约进度条 */
.dotlist{
  text-align: center;
  font-size: 0;
}
.dotlist .progress{
  width: 450rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin: 3% auto 1%;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.dotlist .progress .line{
  height: 4rpx;
  width: 100%;
  background: #ccc;
  position: absolute;
  top: 10rpx;
  left: 0;
}
.dotlist .progress .line .pro{
  height: 4rpx;
  width: 0;
  background: #FF383E;
  position: absolute;
  top: 0;
  left: 0; 
}
.dotlist .progress .line .pro.step2{
  width:50%;
}
.dotlist .progress .line .pro.step3{
  width:100%;
}
.dotlist .dot{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #ccc;
  z-index: 10;
}
.dotlist .dot.finish{
  background: #FF383E;
}
/* 其他信息填写 */
.other_list{
  min-height: 680rpx;
  background: #fff;
  padding: 40rpx 30rpx 50rpx;
}
.other_list .list_item{
  margin-bottom: 30rpx;
}
.other_list .list_item input{
  height: 74rpx;
  line-height: 74rpx;
  font-size: 34rpx;
  border-bottom:1rpx solid rgba(238,238,238,1);
  color: #444;
}
.other_list .list_item .other_tit{
  font-size:34rpx;
  color:rgba(51,51,51,1);
}
.picker.select{
  color: #444;
}
/* 用户关注点 */
.other_list .list_item.focus{
  display: flex;
  
}
.other_list .list_item.focus text{
  display: inline-block;
  width: 270rpx;
}
.other_list .list_item.focus .checkbox_group{
  display: flex;
  flex-wrap: wrap;
}
.other_list .list_item.focus .checkbox_group .checkbox{
  display: inline-block;
  width: 48%;
  margin-bottom: 20rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   background: #FF383E;
}
checkbox .wx-checkbox-input{
  border: 2rpx solid #FF383E;
}
/* 铺垫程度 */
.other_list .list_item.degree{
  display: flex;
  border-bottom:1rpx solid rgba(238,238,238,1);
  height: 80rpx;
  line-height: 80rpx;
}
.other_list .list_item.degree input{
  width: 40%;
  border: none;
  height: 80rpx;
  line-height: 80rpx;
}
/* 预计消费 */
.other_list .list_item.expect{
  display: flex;
  border-bottom:1rpx solid rgba(238,238,238,1);
  height: 80rpx;
  line-height: 80rpx;
  color: #444;
}
.other_list .list_item.expect .item_select .holdercolor{
  font-size: 32rpx;
  color:rgba(204,204,204,1);
}
.other_list .list_item.expect .item_select view{
  font-size: 32rpx;
  color:#444;
}
.other_list .list_item.expect .item_select .picker.select{
  color: #444;
}
.list_item{
  position: relative;
}
.item_select image{
  width: 25rpx;
  height: 35rpx;
  position: absolute;
  right: 10rpx;
  top: 20rpx;
}
/* 按钮 */
.fast_sub_btn{
  height:88rpx;
  line-height: 88rpx;
  background:#FF383E;
  border-radius:46rpx;
  font-size:34rpx;
  color:rgba(255,255,255,1);
  width: 74%;
  margin: 10rpx 13% 0;
  text-align: center;
}
.btnbot{
  height: 90rpx;
}

.remark{
  height:160rpx;
  border:1px solid #DEDEDE;
  width:98%;
  border-radius:10rpx;
  padding:1%;
  font-size:36rpx;

}