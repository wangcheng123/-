/* pages/fast/fastCategory/fastCategory.wxss */

.container {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.quickLeft {
  width: 206rpx;
  height: 100vh;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.quickLeft .leftItem {
  height: 92rpx;
  background: rgba(247, 249, 252, 1);
  text-align: center;
  line-height: 92rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(96, 105, 114, 1);
}

.quickLeft .leftItem.active {
  background: rgba(255, 255, 255, 1);
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.quickRight {
  width: 574rpx;
  height: 100vh;
  overflow: hidden;
}

.quickRight .rightItem {
  padding: 30rpx 30rpx 0rpx 40rpx;
  position: relative;
}

.quickRight .rightItem .line {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.quickRight .rightItem .itemList {
  padding: 24rpx 0 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  flex-wrap: wrap;
}

.rightItem .itemList .squrt {
  box-sizing: border-box;
  min-width: 120rpx;
  max-width: 310rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: rgba(247, 247, 247, 1);
  border-radius: 25rpx;
  font-size:24rpx;
  padding: 0 24rpx;
  margin-right: 24rpx;
  margin-bottom: 30rpx;
}

.quickRight .rightItem .title {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(63, 69, 75, 1);
  line-height: 40rpx;
}
