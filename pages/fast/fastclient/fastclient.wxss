/* fastclient.wxss */
.container_fastclients{
  height: 100%;
  background:#f5f5f5;
}
/* 快速预约 预约单 tab */
.changetab{
  height: 70rpx;
  line-height: 70rpx;
  font-size:28rpx;
  padding: 0 25%;
  display: flex;
  justify-content: space-between;
  background:#fff;
}
.changetab .check{
  color: #FF383E;
  border-bottom: 5rpx solid #FF383E;
}
.changetab .default{
  color: #444;
}
/* 头部进度 */
.top_area{
  background:#F5F5F5;
  padding: 40rpx 0 20rpx;
}
.nav_bar{ 
  display: flex;
  justify-content: space-around;
  border-radius:8px 8px 0px 0px;
  padding: 0 40rpx;
}
.nav_bar text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color: #999;
}
.nav_bar text.finish{
  color: #FF383E;
}
/* 预约进度条 */
.dotlist{
  text-align: center;
  font-size: 0;
}
.dotlist .progress{
  width: 450rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin: 3% auto 1%;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.dotlist .progress .line{
  height: 4rpx;
  width: 100%;
  background: #ccc;
  position: absolute;
  top: 10rpx;
  left: 0;
}
.dotlist .progress .line .pro{
  height: 4rpx;
  width: 0;
  background: #FF383E;
  position: absolute;
  top: 0;
  left: 0; 
}
.dotlist .progress .line .pro.step2{
  width:50%;
}
.dotlist .progress .line .pro.step3{
  width:100%;
}
.dotlist .dot{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #ccc;
  z-index: 10;
}
.dotlist .dot.finish{
  background: #FF383E;
}
/* 客户信息填写 */
.client_list{
  height: 680rpx;
  background: #fff;
  padding: 50rpx 12rpx 0 30rpx;
}
.client_list .clientlistitem{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom:40rpx;
}
.client_list .clientlistitem text.must{
  color:#FF383E;
  padding-top: 10rpx;
}
.client_list .clientlistitem label{
  width: 150rpx;
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  color:rgba(51,51,51,1);
  margin: 0 10rpx;
  display: flex;
  justify-content: space-between;
}
.client_list .clientlistitem input{
  height: 100%;
  font-size: 34rpx;
  width: 480rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  margin-left: 20rpx;
  color: #444;

}
.client_list .clientlistitem.yzm{
  position: relative;
}
.client_list .clientlistitem.yzm .com{
  width: 480rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  margin-left: 20rpx;

}
.client_list .clientlistitem.yzm .com input{
  width: 250rpx;
  border-bottom: none;
  margin: 0rpx;

}
.client_list .clientlistitem.yzm button{
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  position: absolute;
  top: 0;
  right: 40rpx;
  border-radius:16rpx;
  border:2rpx solid rgba(255,56,62,1);
  background: #fff;
  color: #FF383E;
  margin-top: 8rpx;
  z-index: 10;
}
.clientlistitem .radio-group .radio{
  display: inline-block;
  margin-right: 40rpx;
  margin-left: 20rpx;
  text-align: left;
  text-align-last: left;
}
radio .wx-radio-input{
  border: 2rpx solid #FF383E;
}
.clientlistitem{
  position: relative;
}
.clientlistitem image{
  width: 20rpx;
  height: 35rpx;
  position: absolute;
  right: 30rpx;
  bottom: 24rpx;
}
/* 按钮 */
.next_btn_clicent{
  width: 74%;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0 13%;
  text-align: center;
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  color:rgba(255,255,255,1);
  background:rgba(255,56,62,1);
  border-radius:46px;
  position: absolute;
  bottom: 84rpx;
}
