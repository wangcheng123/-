/* bank.wxss */
.container_bank{
  height: 100%;
  background: #444;
}
.hrs{
  background: #444;
}
.bank_list{
  width: 90%;
  height:89%;
  padding: 30rpx 5% 0; 
  overflow: auto;
}
.bank_list .list_item{
  margin-bottom: 30rpx;
}
.bank_list .list_item .bank{
  min-height: 270rpx;
  position: relative;
}

.bank_list .list_item .banktype{
  font-size:24rpx ;
  color:rgba(255,255,255,1);
  margin-left: 152rpx;
}
.bank_list .list_item .bankname{
  font-size:34rpx;
  color:rgba(255,255,255,1);
  margin-left: 152rpx;
  padding-top: 36rpx;
}
.bank_list .list_item .banknum{
  font-size:34rpx ;
  color:rgba(255,255,255,1);
  margin-left: 152rpx;
  margin-top: 44rpx;
}
/* 添加银行卡 */
.add_bank_btn{
  width: 100%;
  height:98rpx;
  line-height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  text-align: center;
  z-index: 10;
  border-radius: 0;
  background:white;
}
.add_bank_btn button{
  background: none;
  color: #FF383E;
  font-size: 38rpx;
  position: absolute;
  top: -20rpx;
  left: 33%;
}
.symbol{
  font-size: 52rpx;
}
/* 占位符 */
.holerimg{
  width: 60%;
  text-align: center;
  position: fixed;
  top: 21%;
  left: 23%;
}
.holerimg image{
  width: 246rpx;
  height: 210rpx;
}
.holerimg view{
  font-size:28rpx;
  color:rgba(255,255,255,1);
  margin-top: 15rpx;
}
/* 编辑按钮 */
.edit{
  font-size:24rpx;
  color:rgba(255,255,255,1);
  width:20%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  top: 6%;
  right:0;
  z-index: 10000;
}
/* 解除绑定 */
.remove{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #444;
  text-align: center;
  background: #fff;
  left: 0;
  margin-top: 20rpx;
}
/* 弹框 */
.modal_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1000;
}
.modal_mask .modal{
  width: 70%;
  margin: 0 15%;
  position: absolute;
  top: 27%;
  background: #fff;
  border-radius: 12rpx;
}
.modal_mask .modal .content{
  padding: 76rpx 20%;
  text-align: center;
  font-size: 28rpx;
}
.modal_mask .modal .btn{
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #f5f5f5;
}
.modal_mask .modal .btn button{
  width: 49%;
  text-align: center;
  background: #fff;
  font-size: 28rpx;
  height: 82rpx;
  line-height: 82rpx;
}
.modal_mask .modal .btn button.sure{
  color: #FF383E;
}
.modal_mask .modal .btn .divi{
  width: 0;
  height: 80rpx;
  border-left: 1rpx solid #f5f5f5;
}