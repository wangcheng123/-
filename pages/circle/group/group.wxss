.group_list{
  height: 160rpx;
  background: #fff;
  border-radius:16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.group_list .list_top{
  display: flex;
}
.group_list .list_top .top_left{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.group_list .list_top .top_left image{
  width: 100%;
  height: 100%;
}
.group_list .list_top .top_right{
  font-size:28rpx;
  color:#333333;
}
.phone{
  margin-left: 20rpx;
}
.group_list .list_top .top_right view{
  margin-top: 20rpx;
}
.group_list .list_bot{
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  color:#666666;
  margin-top: 20rpx;
}
.group_list .list_bot text{
  max-width: 48%;
  max-height: 40rpx;
  overflow: auto;
  white-space: nowrap;
}
