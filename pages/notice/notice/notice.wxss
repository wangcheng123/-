/* notice.wxss */
::-webkit-scrollbar {display:none}
.container_notice{
  width: 100%;
  height: 100%;
  background: #F5F5F5;
}
/* 滑动列表 */
.scrolllist{
  height: 100%;
  width: 92%;
  padding: 0 4%;
  overflow: auto;
}
.scrolllist .listitem{
  padding:30rpx 30rpx 5rpx 30rpx; 
  min-height: 100rpx;
  font-size: 28rpx;
  color:rgba(68,68,68,1);
  background:rgba(255,255,255,1);
  border-radius: 12rpx;
  position: relative;
}
.scrolllist .itembox{
  margin-top: 20rpx;
}
.scrolllist .itembox .n_time{
  margin: 20rpx 37%;
  height: 30rpx;
  line-height: 50rpx;
  background:rgba(204,204,204,1);
  border-radius:8rpx;
  font-size:24rpx;
  color:white;
  padding-bottom: 20rpx;
  text-align: center;
}
.scrolllist .listitem .n_tit{
  font-size:30rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  margin-bottom: 10rpx;
}
.scrolllist .listitem .n_det{
  max-height: 76rpx;
  line-height: 35rpx;
  overflow: hidden;
  font-size:24rpx;
  color:rgba(102,102,102,1);
  margin: 10rpx 0 20rpx 0;
}
.scrolllist .listitem .to_detail{
  height: 66rpx;
  line-height: 66rpx;
  font-size:25rpx;
  color: #333333;
  border-top: 2rpx solid rgba(245,245,245,1);
}
.scrolllist .listitem .to_detail image{
  width: 45rpx;
  height: 45rpx;
  margin-top: 12rpx;
  float: right;
}
.scrolllist .listitem .text{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
  text-overflow:ellipsis;
}
.scrolllist .listitem .mask{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #FF3F45;
  position: absolute;
  top: 44rpx;
  left: 12rpx;
}