/* pages/main/results/results.wxss */

.container_main {
  width: 100%;
  height: 100%;
}

.aTopTitle {
  background: #fff;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.aTopTitle .titleItem {
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #999;
}

.aTopTitle .titleItem.active {
  color: #ff383e;
  border-bottom: 6rpx #ff383e solid;
}

.results_main {
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.month_results {
  padding: 30rpx 30rpx 40rpx;
  background: rgba(250, 250, 250, 1);
  border-radius: 10rpx;
  border: 2rpx solid rgba(255, 220, 220, 1);
  margin: 30rpx 0;
}

.month_results .title {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.month_results .money_results {
  font-weight: 500;
  color: rgba(255, 56, 62, 1);
  margin: 30rpx 0;
  font-size: 64rpx;
  line-height: 80rpx;
}

.month_results .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.month_results .item text:first-child {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.month_results .item text:last-child {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.month_results .results_infor {
  width: 460rpx;
  height: 88rpx;
  background: rgba(255, 238, 238, 1);
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 56, 62, 1);
  text-align: center;
  line-height: 88rpx;
  margin: 60rpx auto 0;
}

.image_icon {
  width: 592rpx;
  height: 30rpx;
  background: url(https://img.ameimeika.com/h5_images/businessAssistant/bg_results.png) no-repeat;
  background-size: 100% 100%;
  margin: 0 auto;
}

.results_content {
  margin: 30rpx 0 0;
  background: rgba(250, 250, 250, 1);
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.results_content .title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.results_content .title icon {
  width: 36rpx;
  height: 36rpx;
  background: url(https://img.ameimeika.com/h5_images/businessAssistant/icon_medal.png) no-repeat;
  background-size: 100% 100%;
  margin-right: 14rpx;
}

.results_content .num {
  font-size: 48rpx;
  font-weight: 500;
  color: rgba(255, 56, 62, 1);
  line-height: 60rpx;
  margin-bottom: 40rpx;
}

.information {
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.information .title {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.information .title icon {
  width: 50rpx;
  height: 50rpx;
  background: url(https://img.ameimeika.com/h5_images/businessAssistant/icon_screen.png) no-repeat;
  background-size: 36rpx;
}

.information .input_box {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  padding-bottom: 20rpx;
  border-bottom: 2rpx rgba(240, 240, 240, 1) solid;
  margin-bottom: 20rpx;
}

.information .input_box .input {
  width: 300rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
}

.information .input_box text {
  height: 60rpx;
  line-height: 60rpx;
}

.information .input_box .input .time {
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(243, 243, 243, 1);
  border-radius: 10rpx;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 20rpx;
}

.information .stitle {
  color: rgba(153, 153, 153, 1);
}

.information .item {
  margin-bottom: 20rpx;
  background: rgba(250, 250, 250, 1);
  border-radius: 10rpx;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.information .item .fonts {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.information .item .fonts text {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 69, 69, 1);
}

/* 选择时间 */

.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.container_time {
  width: 100%;
  background: #fff;
}

/* 主体内容 */

.select_time {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 86rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

picker-view-column view {
  font-size: 28rpx;
  font-weight: 400;
  color:rgba(51,51,51,1);
}

.select_time .item_select {
  width: 45%;
  text-align: center;
  border-bottom: 2rpx solid rgba(204, 204, 204, 1);
}

.select_time .picker {
  font-size: 28rpx;
  font-weight: 400;
  color:rgba(51,51,51,1);
  margin-left: 7rpx;
}

.select_time .color {
  color: #ff383e;
}

.select_time .picker.select {
  font-size: 28rpx;
  color: rgb(83, 34, 34);
}

/* 确定按钮 */

.btn_box {
  display: flex;
  flex-direction: row-reverse;
  width: 100%;
  border-radius: 50px;
  padding: 0 60rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.sub_btn {
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: #ff383e;
  border-radius: 46rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.sub_btn.off_btn {
  background: rgba(243, 243, 243, 1);
  color: rgba(102, 102, 102, 1);
  margin-right: 30rpx;
}

.pricker-view {
  height: 410rpx;
  margin: 50rpx 0;
  text-align: center;
}
