/* pages/main/mine/myClient/myClient.wxss */

.myClient {
  width: 100%;
  height: 100%;
  background: white;
}

.line {
  width: 100%;
  height: 20rpx;
  background: #fff;
}

/* 客户信息 */

.client {
  /* position: fixed;
  top: 230rpx;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999; */
}

.clientTitle {
  display: flex;
  font-size: 28rpx;
  color: #333;
  padding: 22rpx 40rpx;
  text-align: center;
  background: white;
  border-bottom: 2rpx solid #f5f5f5;
}

.clientTitle view {
  flex: 1;
}

.clientInfoDetails {
  margin: 0 40rpx;
  /* padding-top: 65rpx; */
  background: white;
  padding-bottom: 60rpx;
  /* margin-top:230rpx; */
}

.clientInfoNumber {
  display: flex;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  border-bottom: 2rpx solid #f5f5f5;
  padding: 24rpx 0;
  font-weight: 600;
  font-family: PingFangSC-Medium;
}

.clientInfoNumber.disables {
  color: #999;
}

.clientInfoNumber view {
  flex: 1;
}

/* 没有客户信息样式 */

.noClientImg image {
  width: 210rpx;
  height: 210rpx;
}

.noClient {
  text-align: center;
  margin-top: 50%;
}

.noClientText {
  font-size: 28rpx;
  color: #666;
  margin-top: 15rpx;
}

/* 核心的一些title */

.core {
  width: 90%;
  margin: 30rpx auto;
  /* height: 200rpx; *//* margin: 30rpx 0rpx; *//* position: fixed;
  top: 0rpx;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999; */
}

.core .box {
  box-shadow: 0px 2px 6px 0px rgba(196, 196, 196, 0.5);
  border-radius: 3px;
  background-color: #fff;
}

.core .top-item {
  display: flex;
  justify-content: space-around;
  font-size: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  /* margin:5rpx 0rpx; */
}

.core .title {
  padding: 20rpx 0rpx 8rpx;
  font-size: 24rpx;
}

.core .number {
  font-weight: 500;
  color: rgba(255, 56, 62, 1);
  font-size: 32rpx;
  line-height: 44rpx;
  height: 44rpx;
  padding: 8rpx 0rpx 20rpx;
}

.wringIcon {
  width: 28rpx;
  height: 24rpx;
  position: relative;
  top: 1rpx;
}

.someTab {
  height: 72rpx;
  background-color: #fff2e1;
}

.someTab {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #1d2023;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.someTab .jinshiImg {
  width: 28rpx;
  height: 24rpx;
  margin-right: 8rpx;
  position: relative;
  top: 1rpx;
}

.someTab .backIcon {
  width: 12rpx;
  height: 22rpx;
}
