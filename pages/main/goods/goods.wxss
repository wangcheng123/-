/* pages/main/goods/goods.wxss */
::-webkit-scrollbar {display:none}
/* 导航 */
.goods_container {
  background: #fff;
  width: 100%;
  height: 100%;
}

/* 导航 */

.goodsTop {
  width: 100%;
  position: fixed;
  background: white;
  z-index: 9999;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.goodsnav {
  height: 100rpx;
  line-height: 100rpx;
  overflow: auto;
  white-space: nowrap;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.goodsnav text {
  position: relative;
}

.goodsnav text.on {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 56, 62, 1);
}

.goodsnav text.on::after {
  content: '';
  width: 136rpx;
  height: 6rpx;
  background: rgba(255, 56, 62, 1);
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.subnav{
  width: auto;
  padding: 20rpx 0;
  border-bottom: 2rpx rgba(240,240,240,1) solid;
  overflow-x: auto;
  white-space:nowrap;
}
.subnav text{
  width:156rpx;
height:60rpx;
background:rgba(250,250,250,1);
border-radius:6rpx;
margin-right: 16rpx;
font-size:24rpx;
font-weight:400;
color:rgba(102,102,102,1);
line-height:60rpx;
display: inline-block;
text-align: center;
}
.subnav text.on{
  background:rgba(255,238,238,1);
color:rgba(255,56,62,1);
}

/* 全部商品列表 */
.swiper-box{
  width: 100%;
  height: 100%;
  padding-top: 130rpx;
}

/* 商品列表 */
.goodsList{
  width: 100%;
}
.goodsListone {
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.goodsList_son {
  width: 338rpx;
  background: rgba(250, 250, 250, 1);
  border-radius: 8rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.goodsList_son .main_card {
  width: 312rpx;
  height: 175rpx;
  background: url(https://img.ameimeika.com/h5_images/businessAssistant/card_bj.png) no-repeat;
  background-size: 100% 100%;
  padding: 20rpx 18rpx 16rpx;
  box-sizing: border-box;
  margin: 18rpx auto 10rpx;
}

.goodsList_son .main_card .title {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(125, 58, 58, 1);
  background: linear-gradient(270deg, rgba(103, 36, 36, 1) 0%, rgba(201, 133, 133, 1) 34%, rgba(175, 89, 89, 1) 51%, rgba(213, 112, 112, 1) 62%, rgba(141, 75, 75, 1) 87%, rgba(184, 111, 111, 1) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 8rpx;
}

.goodsList_son .main_card .stitle {
  width: 100%;
  font-size: 22rpx;
  font-weight: 300;
  color: rgba(125, 58, 58, 1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 28rpx;
}

.goodsList_son .main_card .num {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(155, 99, 96, 1);
}

.goodsList_son .main_card .num .left {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(125, 58, 58, 1);
}

.goodsList_son .main_card .num .left text {
  font-size: 39rpx;
}

.btn {
  width: 298rpx;
  height: 56rpx;
  background: rgba(255, 238, 238, 1);
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 56, 62, 1);
  text-align: center;
  line-height: 56rpx;
  margin: 30rpx auto 0;
}

.goods_main image {
  width: 338rpx;
  height: 338rpx;
}

.goods_main .fonts {
  padding: 0 10rpx;
}

.goods_main .title {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin: 10rpx 0;
}

.goods_main .stitle {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 14rpx;
  width: 100%;
}

.goods_main .num {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 56, 62, 1);
}

.goods_main .num text {
  font-size: 32rpx;
}

.goodsListone1{
  padding: 20rpx 0 0 0;
}
.goodsList_son1{
  margin: 0 30rpx 0;
  padding-bottom: 20rpx;
  display: flex;
}
