/* feedback.wxss */
.container_feed{
  height: 100%;
  background: #f3f4f6;
}
/* 页面内容 */
.notice{
  font-size:24rpx;
  color:rgba(102,102,102,1);
  padding: 30rpx;
}
/* 反馈类型 */
.f_type{
  padding: 30rpx;
  background: #FFF;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow:0px 1px 0px 0px rgba(204,204,204,0.5);
}
.f_type .tit{
  margin-bottom: 20rpx;
}
.f_type .type_tab{
  display: flex;
  flex-wrap: wrap;
}
.f_type .type_tab text.default{
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #666;
}
.f_type .type_tab text.check{
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #FE4489;
  color: #FE4489;
}
/* 描述 */
.describe{
  position: relative;
  margin: 20rpx 0;
  padding: 20rpx 30rpx 40rpx;
  background: #fff;
  box-shadow:0px 1px 0px 0px rgba(204,204,204,0.5);
}
.describe .label{
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.describe textarea{
  width: 94%;
  height: 180rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  font-size: 26rpx;
  padding: 4% 3%;
  color: #333;
}
.describe .maxnum{
  font-size: 20rpx;
  color: #666;
  position: absolute;
  bottom: 14%;
  right: 6%;
}
/* 图片上传 */
.uploadimg{
  background: #fff;
  padding: 10rpx 30rpx 40rpx;
  margin-bottom: 120rpx;
  box-shadow:0px 1px 0px 0px rgba(204,204,204,0.5);
}
.uploadimg .label text:first-child{
  font-size: 28rpx;
  color: #333;
}
.uploadimg .label text:last-child{
  font-size: 24rpx;
  color: #666;
}
.uploadimg .chooseimg{
  margin-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.uploadimg .chooseimg .btn_upload{
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  text-align: center;
  margin-top: 10rpx;
  margin-left:20rpx;

}
.uploadimg .chooseimg .btn_upload image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-top: 27%;
  margin-left: 50%;
  margin-bottom: 7%;
  transform: translateX(-20rpx)
}
.uploadimg .chooseimg .btn_upload text{
  font-size: 24rpx;
  color: #ccc;
}
.uploadimg .chooseimg .imgitem{
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  position: relative;
  margin-top: 10rpx;
}
.uploadimg .chooseimg .imgitem image{
  width: 100%;
  height: 100%;
}
.uploadimg .chooseimg .imgitem .close{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: -30rpx;
  right: -30rpx;
}
/* 提交 */
.submit_btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  color: #fff;
  background:RGBA(255, 56, 62, 1);
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
}