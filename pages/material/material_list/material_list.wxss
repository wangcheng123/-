  line-height: 40rpx;
  width: 30%;
}
.section_list .sec_item .like_msg .favorite image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-top: 4rpx;
}
.section_list .sec_item .like_msg .comment image{
