/* material_list.wxss */
.container_mlist{
  min-height: 100%;
}
/* 筛选类型 */
.filter{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  background: #fff;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  padding: 0 2% 0 0;
}
.filter .item{
  width: 30%;
  text-align: center;
}
.filter .item image{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.filter .item .type{
  color:#FE4489;
}

/* 类型下拉菜单 */
.downmask{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0,0.4);
  z-index: 100;
}
.downmask .downlist{
  width: 100%;
  position: absolute;
  top: -400rpx;
  left: 0;
  text-align: center;
  font-size: 28rpx;
  /* transition: all 0.5s ease-in; */
}
.downmask .downlist view{
  height: 96rpx;
  line-height: 96rpx;
  border-top: 2rpx solid #f5f5f5;
  background: #fff;
  color: #444;
}
.downmask .downlist view:first-child{
  border-top: none;
}

/* 素材列表 */
.section_list{
  display: flex;
  margin-top: 10rpx; 
  padding-top: 100rpx;
}
.section_list .col{
  width: 45%;
  display: flex;
  flex-direction: column;
  padding: 0 1% 0 4%;
}
.section_list .col_r{
  width: 45%;
  display: flex;
  flex-direction: column;
  padding: 0 4% 0 1%;
}
.section_list .sec_item{
  width: 100%;
  font-size: 0;
  margin-bottom: 30rpx;
}
.section_list .sec_item .imgbox{
  width:100%;
  overflow: hidden;
  margin: 0 auto;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
}
.section_list .sec_item .imgbox .mask image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-40rpx) translateY(-40rpx);
}
.section_list .sec_item .minimgbox .mask image{
  width: 80rpx;
  height: 80rpx;
  opacity: 0.6;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-40rpx) translateY(-40rpx);
}
.section_list .sec_item .minimgbox{
  width:100%;
  overflow:hidden;
  margin: 0 auto;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
}
.section_list .sec_item .minimgbox image{
  width: 100%;
}
.section_list .sec_item .minimgbox{
  width:100%;
  overflow:hidden;
  margin: 0 auto;
  border-radius: 10rpx;
  position: relative;
}
.section_list .sec_item .imgbox image{
