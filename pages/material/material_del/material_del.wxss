page{
  height: 100%;
  position: relative;
}

/* material_det.wxss */
.container_mdet{
  height: 100%;

  padding: 0;
  margin: 0;
  /* background: black; */
}
/* 底部选项栏 */
.d_tab{
  width: 98%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(51,51,51,0.3);
  display: flex;
  justify-content: space-between;
  padding: 20rpx 1%;
}
.d_tab .item{
  width: 23%;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}
.d_tab text{
  font-size: 24rpx;
  color: #fff;
}
.d_tab image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.d_tab .download{
  width: 32rpx;
  height: 32rpx;
}
.d_tab .likes{
  width: 32rpx;
  height: 32rpx;
  margin-top: 5rpx;
}
.d_tab .line{
  width: 0;
  height: 30rpx;
  border-left: 2rpx solid #fff;
  opacity: 0.6;
  margin-top: 14rpx;
}
/* 素材主体 */
.section{
  height: 100%;
  overflow: auto;
  margin:0;
  padding: 0;
  z-index: 10;
}
.section image{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 100%;
  margin:0;
  padding: 0;
}
.section video{
  width: 100%;
  height: 55%;
  z-index: 10;
}
.download{
  width: 100%;
  height: 9%;
  background: white;
  padding-top: 28rpx;
}
