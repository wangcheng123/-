/* 素材标题 */
.m_title{
  width: 100%;
  height: 60rpx;
  position: fixed;
  bottom:90rpx;
  left: 0;
  font-size: 28rpx;
  color: #fff;
  overflow: auto;
  background: rgba(0, 0, 0, 0.6);
  padding: 20rpx 20rpx 0;
  z-index: 10000;
}

/* 授权弹框 */
.modal{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0,0.4);
  z-index: 10000;
}
.modal .box{
  width: 80%;
  margin: 55% 10% 0;
  background: #fff;
}
.modal .box .text{
  text-align: center;
  font-size: 30rpx;
  color: #999;
  padding: 40rpx 30rpx 30rpx;
}
.modal .box .selectbtn{
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
}
.modal .box .selectbtn button{
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background: #fff;
  font-size: 36rpx;
}
.modal .box .selectbtn .line{
  width: 0;
  height: 100%;
  border-left: 1rpx solid #eee;
}


.desc{
  height: 26%;
  margin: 10rpx 0rpx;
  padding: 0rpx 18rpx;
  width: auto;
  overflow: hidden;
}
.desc .head{
  font-size: 31rpx;
  margin-bottom: 20rpx;
  color: #444;
  font-weight: 700;
}
.desc .body{
  font-size: 30rpx;
  color: #333;
  background-color: #ddd;
  border-radius: 10rpx;
  padding: 14rpx 25rpx;
  height: 72%;
  display: block;
  width: 94%;
}

/* 固定按钮 */
.tool{
  position: fixed;
  bottom: 0px;
  display: flex;
  background-color: #fff;
  height: 110rpx;
  /* line-height: 10%; */
  justify-content:space-between;
  width: 80%;
  padding: 0rpx 10% 0rpx 10%;

  border-top: 1px solid  #6F6F6F;
}

.tool button{
  background-color: #fff;
  color: #6F6F6F;
  border:1px solid #6F6F6F;
  border-radius: 10rpx;
  font-size: 34rpx;
  /* border:2rpx solid rgba(102,102,102,1); */
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 20rpx;
}