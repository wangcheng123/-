/* material_search.wxss */
.container_msearch{
  min-height: 100%;
  background: #fff;
}
/* 搜索 */
.s_place{
  font-size: 26rpx;
  color: #999;
  line-height: 64rpx;
}
.m_search{
  height: 86rpx;
  width: 92%;
  background: #fff;
  padding: 0 4%;
  display: flex;
  justify-content: space-between;
  border-top:2rpx solid #eee;
  border-bottom: 2rpx solid #eee; 
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}
.m_search image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 24rpx;
  left: 50rpx;
}
.m_search .s_input{
  width: 75%;
  height: 64rpx;
  line-height: 64rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  margin-top: 14rpx;
  padding-left: 80rpx;
  color: #333;
  font-size: 28rpx;
}
.m_search .cancel{
  font-size: 28rpx;
  width: 12%;
  text-align: center;
  line-height: 86rpx;
}
/* 素材列表 */
.section_list{
  display: flex;
  margin-top: 10rpx; 
  padding-top: 100rpx;
}
.section_list .col{
  width: 45%;
  display: flex;
  flex-direction: column;
  padding: 0 1% 0 4%;
}
.section_list .col_r{
  width: 45%;
  display: flex;
  flex-direction: column;
  padding: 0 4% 0 1%;
}
.section_list .sec_item{
  width: 100%;
  font-size: 0;
  margin-bottom: 30rpx;
}
.section_list .sec_item .imgbox{
  width:100%;
  overflow: hidden;
  margin: 0 auto;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
}
.section_list .sec_item .minimgbox{
  position: relative;
}
.section_list .sec_item .imgbox .mask image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-40rpx) translateY(-40rpx);
}
.section_list .sec_item .minimgbox{
  width:100%;
  overflow:hidden;
  margin: 0 auto;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
}
.section_list .sec_item .minimgbox image{
  width: 100%;
  min-height: 20rpx;
}
.section_list .sec_item .minimgbox .mask image{
  width: 80rpx;
  height: 80rpx;
  opacity: 0.6;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-40rpx) translateY(-40rpx);
}
.section_list .sec_item .minimgbox{
  width:100%;
  overflow:hidden;
  margin: 0 auto;
  border-radius: 10rpx;
}
.section_list .sec_item .imgbox image{
  width: 100%;
  max-height: 456rpx;
}
.section_list .sec_item .title{
  font-size: 28rpx;
  color: #444;
  margin: 3% 0;
}
.section_list .sec_item .like_msg{
  display: flex;
  font-size: 20rpx;
  color: #999;
}
.section_list .sec_item .like_msg .favorite{
  height: 40rpx;
  line-height: 40rpx;
  width: 30%;
}
.section_list .sec_item .like_msg .comment{
  height: 40rpx;
  line-height: 40rpx;
  width: 30%;
}
.section_list .sec_item .like_msg .favorite image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-top: 4rpx;
}
.section_list .sec_item .like_msg .comment image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
  margin-top: 4rpx;
}

/* 素材占位符 */
.orderholder{
  width: 256rpx;
  height: 228rpx;
  margin-top: 40%;
  margin-left: 50%;
  transform: translateX(-128rpx)
}
.orderholder image{
  width: 100%;
  height: 100%;
}
.orderholder view{
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.m_search .clearImg{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 29rpx;
  left: 76%;
  z-index: 10;
}